div(class="row")
  div(class="col-md-10 col-md-offset-1")
    form
      div(class="form-group")
        h3 Search
        input(ng-model="searchInput", class="form-control", type="text", placeholder="song, album, or artist name...")

div(class="row")
  div(class="col-md-10 col-md-offset-1")
    div(class="row")
      div(ng-repeat="r in SpotifySearch.results", class="col-md-6 search-result")
        h4 {{ r.name }}
          small  by {{ r.artists[0].name }}        
        p from {{ r.album.name }} ({{ r.album.released }})
        div(class="btn-toolbar")
          a(ng-click="Jukebox.play(r.href)", class="btn btn-small btn-success")
            span(class="glyphicon glyphicon-plus") 
            |  add to queue
